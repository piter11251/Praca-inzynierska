<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
        xmlns:local="clr-namespace:DiabetesAppFrontend.Enums"
        x:Class="DiabetesAppFrontend.Views.EditSugarEntryPopup"
        >

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Edytuj wartosc pomiaru" FontSize="20" HorizontalOptions="Center"/>
        <Entry x:Name="SugarValueEntry"
               Keyboard="Numeric"
               Placeholder="Wartość cukru"/>
        <DatePicker x:Name="MealDatePicker"/>
        <TimePicker x:Name="MealTimePicker" />
        <Picker x:Name="MealMarkerPicker"
                Title="Wybierz porę posiłku"
                ItemsSource="{x:Static local:MealTypeEnum.Values}"/>
        <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
            <Button Text="Anuluj" Clicked="OnCancelClicked" />
            <Button Text="Zapisz" Clicked="OnSaveClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
    
</toolkit:Popup>