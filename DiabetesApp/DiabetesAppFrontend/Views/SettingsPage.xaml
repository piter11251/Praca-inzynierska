<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiabetesAppFrontend.Views.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Ustawienia preferencji" FontSize="20" HorizontalOptions="Center"/>

        <Label Text="Poziom cukru (niski): "/>
        <Entry Text="{Binding SugarLow, Mode=TwoWay}" Keyboard="Numeric"/>

        <Label Text="Poziom cukru (wysoki): "/>
        <Entry Text="{Binding SugarHigh, Mode=TwoWay}" Keyboard="Numeric"/>

        <Label Text="Ciśnienie (niskie): "/>
        <Entry Text="{Binding BloodPressureLow, Mode=TwoWay}" Keyboard="Numeric"/>

        <Label Text="Ciśnienie (wysokie): "/>
        <Entry Text="{Binding BloodPressureHigh, Mode=TwoWay}" Keyboard="Numeric"/>

        <Button Text="Zapisz" Command="{Binding SaveCommand}"/>
    </VerticalStackLayout>
</ContentPage>