<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:DiabetesAppFrontend.Enums"
        x:Class="DiabetesAppFrontend.Views.EditSugarEntryPage"
        >

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Edytuj wartość pomiaru" FontSize="20" HorizontalOptions="Center"/>
        <Entry x:Name="SugarValueEntry"
               Placeholder="Wartość cukru"
               Keyboard="Numeric"
               Text="{Binding SugarValue, Mode=TwoWay}"/>
        <DatePicker x:Name="MealDatePicker" Date="{Binding MealDate, Mode=TwoWay}"/>
        <TimePicker x:Name="MealTimePicker" Time="{Binding MealDate, Mode=TwoWay}"/>
        <Picker x:Name="MealMarkerPicker"
                Title="Wubierz porę posiłku"
                ItemsSource="{Binding MealMarkers}"
                SelectedItem="{Binding SelectedMealMarker, Mode=TwoWay}"/>
        <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
            <Button Text="Anuluj" Command="{Binding CancelCommand}"/>
            <Button Text="Zapisz" Command="{Binding SaveCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
    
</ContentPage>